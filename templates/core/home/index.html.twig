{% extends "layout.html.twig" %}
{% form_theme emailForm 'form/form_errors.html.twig' %}
{% import "macros/_macro_meta_tags.html.twig" as macroMetaTags %}

{% set meta_title %}{{ 'core.home.meta.title'|trans }}{% endset %}

{% set meta_description %}
{{ 'core.home.meta.description'|trans }}
{% endset %}

{% set meta_url %}
{{ url('core_home') }}
{% endset %}

{% block title %}
    {{ meta_title }} - {{ parent() }}
{% endblock %}

{% block meta %}
    {{ macroMetaTags.meta_tags(meta_title, meta_description, meta_url ) }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('build/css/home.css') }}" />
{% endblock %}

{% block body %}
	{% include 'core/home/blocks/_fullscreen_links.html.twig' %}

    {% include 'core/home/blocks/_skills.html.twig' %}

    {% include 'core/home/blocks/_contact_form.html.twig' %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/js/formHandler.js') }}"></script>
{% endblock %}
