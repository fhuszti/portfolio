{% extends "layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite, ?scssphp'
        'bundles/app/css/errors.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block lang %}
{% endblock %}

{% block body %}
    <header class="row">
        <span class="glyphicon glyphicon-ban-circle"></span>
        <h1>{% block error_title %}{% endblock %}</h1>
    </header>

    <hr />

    {% block content %}
    {% endblock %}

    <div class="row">
        <a href="{{ path('core_home', { '_locale': 'en' }) }}" title="{% trans into "en" %}core.header.homepage.link_title{% endtrans %}" class="btn btn-default">
            {% trans into "en" %}core.header.homepage.link_title{% endtrans %}
        </a>
        <a href="{{ path('core_home', { '_locale': 'fr' }) }}" title="{% trans into "fr" %}core.header.homepage.link_title{% endtrans %}" class="btn btn-default">
            {% trans into "fr" %}core.header.homepage.link_title{% endtrans %}
        </a>
    </div>
{% endblock %}
