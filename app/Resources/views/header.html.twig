<header class="navbar navbar-default navbar-fixed-top" id="header">
  	<div class="container">
  		<div class="navbar-header" id="logo">
        	<a href="{{ path('core_home') }}" title="{{ 'core.header.homepage.link_title'|trans }}" class="navbar-brand">
            	{% if layout_mini %}
                    {% image 'http://assets.fhuszti.com/small-logo.png' %}
                        <img src="{{ asset_url }}" alt="{{ 'core.header.logo.alt'|trans }}" />
                    {% endimage %}
                {% else %}
                    {% image 'http://assets.fhuszti.com/logo.png' %}
    					<img src="{{ asset_url }}" alt="{{ 'core.header.logo.alt'|trans }}" />
    				{% endimage %}
                {% endif %}
			</a>

        	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
            	<span class="icon-bar"></span>
        	</button>
    	</div>

    	<div class="collapse navbar-collapse">
        	{% if status_code is not defined %}
                <div id="lang-menu" class="navbar-text">
    			  	<a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'en'})) }}" class="navbar-link">
    			  		EN</a>
    			  	<a href="{{  path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale': 'fr'}))}}" class="navbar-link">
    			  		FR
    			  	</a>
    			</div>
            {% endif %}

            <nav role="navigation">
                <!-- actual menu list -->
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="{{ path('core_home') }}" title="{{ 'core.header.homepage.link_title'|trans }}">
                            {{ 'core.header.homepage.title'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('core_resume') }}" title="{{ 'core.header.resume.link_title'|trans }}">
                            {{ 'core.header.resume.title'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('core_interactive') }}" title="{{ 'core.header.interactive.link_title'|trans }}">
                            {{ 'core.header.interactive.title'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('core_projects') }}" title="{{ 'core.header.projects.link_title'|trans }}">
                            {{ 'core.header.projects.title'|trans }}
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
  	</div>
</header>
