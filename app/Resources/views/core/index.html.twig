{% extends "layout.html.twig" %}
{% form_theme emailForm 'form/form_errors.html.twig' %}

{% block title %}
  	{{ 'core.header.homepage.title'|trans }} - {{ parent() }}
{% endblock %}

{% block meta %}
	<meta name="description" content="{{ 'core.site.meta.description'|trans }}" />

	<!-- thumbnail picture to share on social medias -->
    <meta property="og:title" content="{{ 'core.site.meta.title'|trans }}" />
    <meta property="og:description" content="{{ 'core.site.meta.description'|trans }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.fhuszti.com/{{ app.request.locale }}/" />
    <meta property="og:image" content="http://assets.fhuszti.com/big-logo.png" />
    <link rel="image_src" href="http://assets.fhuszti.com/big-logo.png" />
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite, ?scssphp'
        'bundles/app/css/homepage.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css">
    {% endstylesheets %}
{% endblock %}

{% block body %}
	{% include 'core/blocks/index/fullscreen_links.html.twig' %}

    {% include 'core/blocks/index/skills.html.twig' %}

    {% include 'core/blocks/index/contact_form.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    {% javascripts filter='?jsqueeze'
        'bundles/app/js/formHandler.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
